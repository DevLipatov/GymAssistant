<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devlip.gymassistant">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.NewExerciseActivity"/>
        <activity android:name=".activity.CreateExerciseActivity"
            android:label="Create exercise"
            android:theme="@style/Base.Theme.AppCompat.Dialog"/>
        <activity android:name=".activity.NewTrainingActivity"/>

    </application>

</manifest>
